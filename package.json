{
  "name": "dev-challenge",
  "version": "0.1.0",
  "private": true,
  "engines": {
    "node": ">=20.0.0",
    "yarn": ">=1.22.0"
  },
  "workspaces": [
    "src/design/ui",
    "src/design/ui-preset",
    "src/design/icons"
  ],
  "scripts": {
    "dev": "next dev -p 3001",
    "prebuild": "yarn workspace @design/ui-preset build && yarn workspace @design/ui build && yarn workspace @design/icons build",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "test": "jest --config scripts/jest.config.js",
    "test:watch": "jest --config scripts/jest.config.js --watch",
    "test:coverage": "jest --config scripts/jest.config.js --coverage",
    "test:ci": "jest --config scripts/jest.config.js --ci --coverage --watchAll=false",
    "test:badge": "node scripts/generate-test-badge.js",
    "test:update-readme": "yarn test:badge",
    "test:watch-and-update": "node scripts/watch-tests.js watch",
    "test:dashboard": "echo 'Test dashboard available at http://localhost:3001/test-dashboard'",
    "build:design": "yarn workspace @design/ui-preset build && yarn workspace @design/ui build && yarn workspace @design/icons build",
    "clean:design": "yarn workspace @design/ui clean && yarn workspace @design/icons clean",
    "dev:design": "yarn workspace @design/ui build:watch"
  },
  "dependencies": {
    "@design/icons": "*",
    "@design/ui": "*",
    "@design/ui-preset": "*",
    "@hookform/resolvers": "^5.2.0",
    "@radix-ui/react-label": "^2.1.7",
    "@radix-ui/react-slot": "^1.2.3",
    "@types/bcryptjs": "^2.4.6",
    "axios": "^1.7.9",
    "bcryptjs": "^3.0.2",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "date-fns": "^4.1.0",
    "lucide-react": "^0.525.0",
    "next": "15.0.3",
    "next-auth": "^4.24.11",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-hook-form": "^7.61.1",
    "react-hot-toast": "^2.5.2",
    "tailwind-merge": "^3.3.1",
    "tailwindcss-radix": "^2.8.0"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^14.3.1",
    "@testing-library/user-event": "^14.6.1",
    "@types/jest": "^29.5.0",
    "@types/minimatch": "^6.0.0",
    "@types/node": "^20.0.0",
    "@types/react": "^18.0.0",
    "@types/react-dom": "^18.0.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "postcss": "^8.0.0",
    "tailwindcss": "^3.4.17",
    "typescript": "^5.0.0"
  }
}
